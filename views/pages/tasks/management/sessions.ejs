<%- partial('../../../layouts/header') %>

<div class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column is-two-thirds">
          <div class="content">
            <h2>Manage Data</h2>
          </div>
        </div>
        <div class="column">

        </div>
      </div>
    </div>
  </div>
</div>

<section class="section">
  <div class="container">
    <table class="table" ng-controller="manageController">
      <thead>
        <tr>
          <th>ID</th>
          <th>Usuário</th>
          <th>Inicio da sessão</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="session in sessions">
          <td>{{session.id}}</td>
          <td>{{session.owner.username}}</td>
          <td>{{session.createdAt | date: 'd/M/yyyy h:mm'}}</td>
          <td>
            <button class="button is-danger" ng-click="deleteSession(session.id)"><span class="delete is-medium"></span></button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</section>