<% if(!session.user) { %>
<div class="hero is-warning bg-warning-pattern">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column is-1">
          <img src="/images/Sorte.svg">
        </div>
        <div class="column is-7">
          <div class="content">
            <h2>Sign-in and enjoy everything of Project Man</h2>
            <p>A simple and versatile project manage tool.</p>
          </div>
        </div>
        <div class="column">
          <% if(session.error) { %>
          <div class="notification is-danger">
            <button class="delete"></button>
            <%= session.error %>
          </div>
          <% } %>
          <div class="login-form">
              <form action="/tasks/login" method="POST">
                <div class="field">
                  <!-- <label class="label">e-mail</label> -->
                  <div class="control">
                    <input class="input" name="email" type="text" placeholder="e-mail">
                  </div>
                </div>
                <div class="field">
                  <!-- <label class="label">password</label> -->
                  <div class="control">
                    <input class="input" name="password" type="password" placeholder="password">
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <button class="button is-primary">Logar</button>
                  </div>
                </div>
              </form>
              <hr>
            <div class="field is-grouped is-grouped-right">
              <p class="control">
                <a href="/tasks/register" class="button is-primary">
                  Sign-in with your Trello Account
                </a>
              </p>
              <!-- <p class="control">
                <a class="button is-light">
                  Cancel
                </a>
              </p> -->
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<% } %>

<% if(session.user) { %>
<section class="section" ng-controller="boardsController">
  <div class="container" ng-if="boards">
    <div class="columns is-multiline is-mobile">
      <div class="column is-one-quarter" ng-repeat="board in boards">
        <div class="card">
          <header class="card-header" style="background-color: {{board.prefs.backgroundTopColor}}">
            <p class="card-header-title">
              Board
            </p>
            <a href="#" class="card-header-icon" aria-label="more options">
              <span class="icon">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
              </span>
            </a>
          </header>
          <div class="card-content">
            <div class="content">
              <p class="subtitle">
                {{ board.name }}
              </p>
            </div>
          </div>
          <footer class="card-footer">
            <a href="/tasks/lists/{{ board.id }}" class="card-footer-item">subscribe</a>
          </footer>
        </div>      
      </div>
    </div>
  </div>
</section>  
<% } %>